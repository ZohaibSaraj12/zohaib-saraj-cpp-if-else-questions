//sum of digits of a number using only division and remainder concepts  
#include<iostream>
using namespace std;
int main(){
int n1;
cout<<"Enter any number = ";
cin>>n1;
//for 1st digit remainder 
int digit1=n1%10;
//we get last digit
//reamining number without last digit by quotient 
n1=n1/10;
int digit2=n1%10;
n1=n1/10;
int digit3=n1%10;
n1=n1/10;

int digit4=n1%10;
n1=n1/10;
int digit5=n1%10;
n1=n1/10;
int digit6=n1%10;
n1=n1/10;
int sum;
sum=digit1+digit2+digit3+digit4+digit5+digit6;
cout<<"The sum of digits of a number is = "<<sum;

    return 0;
}
